<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!-- Link style cua minh -->
    <script src="../public/javascripts/javascript.js" ></script>
    <title>BTCN04 - 18120245</title>


</head>

<body>
    <section class="form-calculate">
        <div class="container">
            <div class="title">
                Bé tập tính
            </div>
            <br><br>
            <form method="post" name="my_form" onsubmit="onSubmit()">
                <div class="form-group row">
                    <label for="staticNumber" class="col-sm-2 col-form-label">Số thứ nhất</label>
                    <div class="col-sm-6">
                        <input name="firstnumber" type="floatnumber" class="form-control" id="num1"
                            placeholder="Số thứ nhất" value="{{number1}}">
                    </div>
                    <div class="form-check col-sm-2">
                        <input class="form-check-input" {{add}} type="radio" name="calcRadios" id="addRadio"
                            value="add">
                        <label class="form-check-label" for="addRadio">
                            Cộng
                        </label>
                    </div>
                    <div class="form-check col-sm-2">
                        <input class="form-check-input" {{sub}} type="radio" name="calcRadios" id="subtractRadio"
                            value="sub">
                        <label class="form-check-label" for="subtractRadio">
                            Trừ
                        </label>
                    </div>
                    <br><br>

                    <label for="staticNumber" class="col-sm-2 col-form-label">Số thứ hai</label>
                    <div class="col-sm-6">
                        <input name="secondnumber" type="floatnumber" class="form-control" id="num2"
                            placeholder="Số thứ hai" value="{{number2}}">
                    </div>
                    <div class="form-check col-sm-2">
                        <input class="form-check-input" {{mul}} type="radio" name="calcRadios" id="multiRadio"
                            value="mul">
                        <label class="form-check-label" for="multiRadio">
                            Nhân
                        </label>
                    </div>
                    <div class="form-check col-sm-2">
                        <input class="form-check-input" {{div}} type="radio" name="calcRadios" id="divRadio"
                            value="div">
                        <label class="form-check-label" for="divRadio">
                            Chia
                        </label>
                    </div>
                    <br><br>

                    <label for="staticNumber" class="col-sm-2 col-form-label">Kết quả</label>
                    <div class="col-sm-6">
                        <input type="number" class="form-control" id="result" placeholder="Kết quả ở đây nè..."
                            value="{{result}}" readonly>
                    </div>
                    <input type="submit" class="btn btn-primary col-sm-1" id="submit" value="Tính"></input>
                    <div class="col-sm-3"></div>
                    <br><br>

                    <label for="notification" class="col-sm-2 col-form-label">Thông báo</label>
                    <div class="col-sm-10" id="notif">

                    </div>
                </div>
            </form>
    </section>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
        integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
        integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV"
        crossorigin="anonymous"></script>
    <script>
        function onSubmit() {

            var numberInput1 = $('#num1').val();
            var numberInput2 = $('#num2').val();
            numberInput1 = parseFloat(numberInput1);
            numberInput2 = parseFloat(numberInput2);
            var notif = document.getElementById("notif");

            notif.innerHTML = "";
            if (Number.isNaN(numberInput1) == true && Number.isNaN(numberInput2) == true) {
                notif.innerHTML = "<p>Giá trị nhập ở ô <span>Số thứ nhất và Số thứ hai</span> không phải là số</p>";
                return false;

            } else if (Number.isNaN(numberInput1) == true) {
                notif.innerHTML = "<p>Giá trị nhập ở ô <span>Số thứ nhất</span> không phải là số</p>";
                return false;
            } else if (Number.isNaN(numberInput2) == true) {
                notif.innerHTML = "<p>Giá trị nhập ở ô <span>Số thứ hai</span> không phải là số</p>";
                return false;
            } else {

                var calc = document.querySelector('input[name="calcRadios"]:checked').value;

                if (calc == "") {
                    notif.innerHTML = "<p>Chọn phép tính trước khi tính</p>";
                    return false;
                }
                if (calc == "div" && numberInput2 == 0) {
                     notif.innerHTML = "<p>Giá trị nhập ở ô <span>Số thứ hai</span> phải khác không</p>";
                    return false;
                } else {
                    return true;
                }
            }
        };

    </script>
</body>

</html>
